{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",          // ★ 중요
    "strict": true,
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ES2021"],    // ★ DOM 포함
    "types": ["react", "react-dom"]  // ★ 명시적으로 추가
  },
  "include": ["src"]
}
